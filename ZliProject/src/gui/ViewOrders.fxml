<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ViewOrdersController">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="1000.0">
         <children>
            <Label alignment="CENTER" text="ViewOrders" />
            <TableView>
              <columns>
                <TableColumn prefWidth="102.0" text="orderNumber" />
                <TableColumn prefWidth="89.0" text="price" />
                  <TableColumn prefWidth="99.0" text="greetingCard" />
                  <TableColumn prefWidth="60.0" text="color" />
                  <TableColumn prefWidth="78.0" text="dOrder" />
                  <TableColumn prefWidth="56.0" text="shop" />
                  <TableColumn prefWidth="61.0" text="date" />
                  <TableColumn minWidth="-1.0" prefWidth="110.0" text="orderDate" />
              </columns>
            </TableView>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
               <children>
                  <Label text="orderNumber" />
                  <TextField fx:id="orderNumber" />
                  <Label text="date:" />
                  <TextField fx:id="dateField" />
                  <Label text="color:" />
                  <TextField fx:id="colorField" />
                  <Button fx:id="updateButton" mnemonicParsing="false" onAction="#updateDateColor" text="Update" />
               </children>
               <opaqueInsets>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </opaqueInsets>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
