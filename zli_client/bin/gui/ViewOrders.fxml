<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.ViewOrdersController">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="1000.0">
         <children>
            <Label alignment="CENTER" text="ViewOrders" />
            <TableView fx:id="OrderTable" prefHeight="400.0" prefWidth="988.0">
              <columns>
                <TableColumn fx:id="orderNumberCol" maxWidth="1.7976931348623157E308" minWidth="100.0" prefWidth="-1.0" text="orderNumber" />
                <TableColumn fx:id="priceCol" maxWidth="1.7976931348623157E308" minWidth="100.0" prefWidth="-1.0" text="price" />
                  <TableColumn fx:id="greetingCardCol" maxWidth="1.7976931348623157E308" minWidth="100.0" prefWidth="-1.0" text="greetingCard" />
                  <TableColumn fx:id="colorCol" maxWidth="1.7976931348623157E308" minWidth="100.0" prefWidth="-1.0" text="color" />
                  <TableColumn fx:id="dOrderCol" maxWidth="1.7976931348623157E308" minWidth="100.0" prefWidth="-1.0" text="dOrder" />
                  <TableColumn fx:id="shopCol" maxWidth="1.7976931348623157E308" minWidth="100.0" prefWidth="-1.0" text="shop" />
                  <TableColumn fx:id="dateCol" maxWidth="1.7976931348623157E308" minWidth="200.0" prefWidth="-1.0" text="date" />
                  <TableColumn fx:id="orderDateCol" maxWidth="1.7976931348623157E308" minWidth="193.0" prefWidth="-1.0" text="orderDate" />
              </columns>
            </TableView>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
               <children>
                  <Label text="orderNumber:" />
                  <TextField fx:id="orderNumberTextField" />
                  <Label text="date:" />
                  <TextField fx:id="dateTextField" />
                  <Label text="color:" />
                  <TextField fx:id="colorTextField" />
                  <Button fx:id="updateButton" mnemonicParsing="false" onMousePressed="#updateDateColor" text="Update" />
               </children>
               <opaqueInsets>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </opaqueInsets>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
            <Button fx:id="refreshButton" mnemonicParsing="false" onMousePressed="#clickOnRefreshButton" text="Refresh" />
         </children>
      </VBox>
   </children>
</AnchorPane>
