<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="720.0" prefWidth="1280.0" spacing="5.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="report.ReportsController">
   <children>
      <GridPane prefHeight="99.0" prefWidth="980.0">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="50.0" minWidth="100.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="1066.0" minWidth="10.0" prefWidth="1060.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="110.0" minWidth="0.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="100.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <VBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="761.0" GridPane.columnIndex="1">
               <children>
                  <Label text="Reports">
                     <font>
                        <Font name="System Bold" size="42.0" />
                     </font>
                  </Label>
                  <Label text="Please select branch, year and quarter to view reports">
                     <font>
                        <Font size="23.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            <ImageView fx:id="homeImage" fitHeight="100.0" fitWidth="100.0" onMousePressed="#returnHome" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../resources/catalog/home.png" />
               </image>
            </ImageView>
         </children>
      </GridPane>
      <VBox alignment="CENTER" prefHeight="72.0" prefWidth="1220.0" spacing="11.0">
         <children>
            <HBox alignment="CENTER" prefHeight="41.0" prefWidth="878.0" spacing="23.0">
               <children>
                  <Label text="Branch:">
                     <font>
                        <Font size="16.0" />
                     </font></Label>
                  <ComboBox fx:id="branchComboBox" prefHeight="25.0" prefWidth="222.0" promptText="Select Branch" />
                  <Label text="Year:">
                     <font>
                        <Font size="16.0" />
                     </font></Label>
                  <ComboBox fx:id="yearComboBox" prefWidth="150.0" promptText="Select Year" />
                  <Label text="Quarter:">
                     <font>
                        <Font size="16.0" />
                     </font></Label>
                  <ComboBox fx:id="quraterComboBox" prefWidth="150.0" promptText="Select Quarter" />
                  <Button fx:id="searchButton" mnemonicParsing="false" onMouseClicked="#searchReportsButton" text="Search Reports" />
               </children>
            </HBox>
            <Label fx:id="noReportsLabel" text="No report found" textFill="#eb1b1b" visible="false" />
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets top="2.0" />
         </padding>
      </VBox>
      <TableView fx:id="reportsTable" maxWidth="-Infinity" prefHeight="499.0" prefWidth="1015.0" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="dateCol" minWidth="0.0" prefWidth="154.0" text="Date" />
          <TableColumn fx:id="typeCol" prefWidth="132.0" text="Type" />
        </columns>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
   <padding>
      <Insets bottom="20.0" left="30.0" right="30.0" top="10.0" />
   </padding>
</VBox>
