<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="productVBox" alignment="TOP_CENTER" prefHeight="300.0" prefWidth="240.0" spacing="6.0" style="-fx-background-color: FAE1DD; -fx-background-radius: 20;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="manageCatalog.ProductVBoxController">
   <children>
      <Label fx:id="productNameLabel" alignment="CENTER" maxWidth="240.0" minWidth="240.0" prefHeight="50.0" prefWidth="240.0" text="Product Name" textAlignment="CENTER" wrapText="true">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      <VBox alignment="CENTER" maxHeight="170.0" maxWidth="220.0" minHeight="158.0" minWidth="220.0" prefHeight="163.0" prefWidth="220.0">
         <children>
            <ImageView fx:id="productImage" fitHeight="166.0" fitWidth="220.0" pickOnBounds="true" preserveRatio="true" />
         </children>
      </VBox>
      <HBox alignment="TOP_CENTER" prefHeight="20.0" prefWidth="150.0" spacing="10.0">
         <children>
            <Label text="Price:">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Label>
            <Label fx:id="priceLabel" text="priceLabel">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <Button fx:id="editProductButton" mnemonicParsing="false" onAction="#openProductEditor" prefHeight="14.0" prefWidth="130.0" style="-fx-background-radius: 20;" text="Edit Product">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Button>
   </children>
   <padding>
      <Insets top="10.0" />
   </padding>
</VBox>
