            <HBox alignment="CENTER_LEFT" prefHeight="44.0" prefWidth="980.0" spacing="20.0">
               <children>
                  <Label text="Order Number: ">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Label>
                  <ComboBox fx:id="orderNumberCombo" prefHeight="25.0" prefWidth="176.0">
                     <HBox.margin>
                        <Insets left="35.0" />
                     </HBox.margin>
                  </ComboBox>
                  <Label fx:id="orderLabel" text="*Please select an order number from the list" textFill="BLUE" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="44.0" prefWidth="980.0" spacing="20.0">
               <children>
                  <Label text="Complaint Reason:">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Label>
                  <TextField fx:id="complaintReason" prefHeight="26.0" prefWidth="960.0" />
               </children>
            </HBox>
            <HBox prefHeight="220.0" prefWidth="1200.0" spacing="11.0">
               <children>
                  <Label text="Complaint Content:">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Label>
                  <TextArea fx:id="complaintText" prefHeight="315.0" prefWidth="959.0" wrapText="true">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextArea>
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="70.0">
               <children>
                  <Label fx:id="complaintError" text="*Please make sure to fill a complaint reason and content before submitting" textFill="BLUE" />
                  <Label text="*Limited to 1024 characters!" textFill="#0400ff" />
               </children>
            </HBox>
         </children>
      </VBox>
      <HBox alignment="BOTTOM_CENTER" prefHeight="72.0" prefWidth="1200.0" spacing="70.0">
         <children>
            <Button fx:id="discardButton" mnemonicParsing="false" onAction="#discardComplaint" text="Discard And Close" />
            <Button fx:id="submitButton" mnemonicParsing="false" onAction="#saveComplaint" text="Submit Complaint" />
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets top="10.0" />
         </padding>
      </HBox>
      <Label fx:id="errorLabel" text="*Failed to submit order" textFill="RED" visible="false">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
   </children>
   <opaqueInsets>
      <Insets />
